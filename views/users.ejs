<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Users | SutraX</title>
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Noto+Serif+Devanagari:wght@700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background-color: #000;
      color: #e6e6e6;
      margin: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      flex-direction: column;
    }

    .glass-card {
      background: rgba(255,255,255,0.05);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(255,255,255,0.08);
      border-radius: 20px;
      padding: 3rem 2rem;
      max-width: 600px;
      text-align: center;
      box-shadow: 0 8px 32px rgba(0,0,0,0.4);
      animation: fadeIn 1s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .sanskrit-logo {
      font-family: 'Noto Serif Devanagari', serif;
      font-size: 2.4rem;
      color: #ffffff;
      margin-bottom: 1rem;
      text-shadow: 0 2px 8px rgba(29,155,240,0.4);
    }

    .error-code {
      font-size: 5rem;
      font-weight: 700;
      color: #ff1e00;
      margin-bottom: 1rem;
    }

    .error-message {
      font-size: 1.2rem;
      margin-bottom: 2rem;
      color: #aaa;
    }

    .user-list {
      text-align: left;
      margin-top: 1rem;
      color: #e6e6e6;
      max-height: 200px;
      overflow-y: auto;
    }

    .user-list li {
      background: rgba(255,255,255,0.05);
      padding: 0.6rem 1rem;
      border-radius: 8px;
      margin-bottom: 0.5rem;
    }

    .btn-primary {
      background-color: #1D9BF0;
      border: none;
      border-radius: 12px;
      font-weight: 600;
      padding: 0.8rem 1.5rem;
      transition: all 0.3s ease;
    }

    .btn-primary:hover {
      background-color: #0d8ddb;
      transform: scale(1.05);
      box-shadow: 0 4px 20px rgba(29,155,240,0.35);
    }

    @media (max-width: 500px){
      .error-code { font-size: 4rem; }
      .glass-card { padding: 2rem 1rem; }
    }
  </style>
</head>
<body>
  <div class="glass-card">
    <div class="sanskrit-logo">सूत्रX</div>
    <!-- <div class="error-message">Here are all the Users.</div> -->

    <% if (users && users.length > 0) { %>
      <h5 class="mb-3">Available Users:</h5>
      <ul class="user-list list-unstyled">
        <% users.forEach(user => { %>
          <li>
            <a target="_blank" href="/users/<%= user.username %>"><strong><%= user.username %></strong></a>
            <% if (user.email) { %> - <%= user.email %> <% } %>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>No users found in database.</p>
    <% } %>

    <a href="/" class="btn btn-primary mt-3">Go to Home</a>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

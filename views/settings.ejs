<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SutraX - UI Settings</title>
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Noto+Serif+Devanagari:wght@700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background-color: #000;
      color: #e6e6e6;
      margin: 0;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .navbar {
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(12px);
      border-bottom: 1px solid rgba(255,255,255,0.1);
    }
    .navbar-brand {
      font-family: 'Noto Serif Devanagari', serif;
      font-size: 1.8rem;
      font-weight: bold;
      color: #1D9BF0 !important;
    }
    .nav-link {
      font-weight: 500;
      color: #e6e6e6 !important;
      margin: 0 0.5rem;
      transition: color 0.2s;
    }
    .nav-link:hover, .nav-link.active {
      color: #1D9BF0 !important;
    }

    /* Wider and Taller Glass Card */
    .glass-card {
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.08);
      border-radius: 20px;
      padding: 3rem 4rem;
      max-width: 900px; /* Wider card */
      min-height: 80vh;  /* Taller card */
      margin: 4vh auto;
      box-shadow: 0 12px 48px rgba(0,0,0,0.5);
      animation: fadeIn 1.2s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .sanskrit-logo {
      font-family: 'Noto Serif Devanagari', serif;
      font-size: 3rem;
      color: #1D9BF0;
      margin-bottom: 2.5rem;
      text-align: center;
      text-shadow: 0 2px 8px rgba(29,155,240,0.5);
    }

    h3.section-title {
      font-weight: 600;
      margin-top: 2.5rem;
      margin-bottom: 1.5rem;
      color: #1D9BF0;
      font-size: 1.6rem;
    }

    .form-check-label {
      color: #e6e6e6;
      font-weight: 500;
      font-size: 1.1rem;
    }

    .form-range {
      accent-color: #1D9BF0;
    }

    .btn-primary {
      background-color: #1D9BF0;
      border: none;
      border-radius: 12px;
      font-weight: 600;
      padding: 1rem 1.5rem;
      margin-top: 3rem;
      width: 100%;
      font-size: 1.2rem;
      transition: all 0.3s ease;
    }
    .btn-primary:hover {
      background-color: #1a8cd8;
      transform: scale(1.03);
      box-shadow: 0 6px 24px rgba(29,155,240,0.4);
    }

    /* Responsive */
    @media (max-width: 1200px){
      .glass-card { padding: 2.5rem 3rem; max-width: 700px; }
      .sanskrit-logo { font-size: 2.6rem; }
    }
    @media (max-width: 768px){
      .glass-card { padding: 2rem 1.5rem; max-width: 90%; min-height: auto; }
      .sanskrit-logo { font-size: 2.2rem; }
      h3.section-title { font-size: 1.4rem; }
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">सूत्रX</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
        data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarContent">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/settings">Settings</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="glass-card">
    <div class="sanskrit-logo">UI Settings</div>

    <!-- Theme -->
    <h3 class="section-title">Theme</h3>
    <div class="form-check form-switch mb-3">
      <input class="form-check-input" type="checkbox" id="dark-mode" checked>
      <label class="form-check-label" for="dark-mode">Dark Mode</label>
    </div>
    <div class="form-check form-switch mb-3">
      <input class="form-check-input" type="checkbox" id="light-mode">
      <label class="form-check-label" for="light-mode">Light Mode</label>
    </div>

    <!-- Font -->
    <h3 class="section-title">Font</h3>
    <input type="range" class="form-range mb-2" min="12" max="24" value="16" id="font-size-range">
    <p style="color:#aaa;">Font Size: <span id="font-size-value">16px</span></p>
    <div class="form-check form-switch mb-3">
      <input class="form-check-input" type="checkbox" id="serif-font" checked>
      <label class="form-check-label" for="serif-font">Use Serif Font</label>
    </div>

    <!-- Animations -->
    <h3 class="section-title">Animations</h3>
    <div class="form-check form-switch mb-3">
      <input class="form-check-input" type="checkbox" id="enable-animations" checked>
      <label class="form-check-label" for="enable-animations">Enable Animations</label>
    </div>
    <div class="form-check form-switch mb-3">
      <input class="form-check-input" type="checkbox" id="smooth-transitions" checked>
      <label class="form-check-label" for="smooth-transitions">Smooth Transitions</label>
    </div>

    <!-- Layout -->
    <h3 class="section-title">Layout</h3>
    <div class="form-check form-switch mb-3">
      <input class="form-check-input" type="checkbox" id="compact-layout">
      <label class="form-check-label" for="compact-layout">Compact Layout</label>
    </div>
    <div class="form-check form-switch mb-3">
      <input class="form-check-input" type="checkbox" id="wide-layout" checked>
      <label class="form-check-label" for="wide-layout">Wide Layout</label>
    </div>

    <button class="btn btn-primary">Save Settings</button>
  </div>

  <script>
    const range = document.getElementById('font-size-range');
    const valueDisplay = document.getElementById('font-size-value');
    range.addEventListener('input', () => {
      valueDisplay.textContent = range.value + 'px';
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

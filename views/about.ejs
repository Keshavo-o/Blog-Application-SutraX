  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Noto+Serif+Devanagari:wght@700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background-color: #000;
      color: #e6e6e6;
      margin: 0;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    /* Navbar */
    .navbar {
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(12px);
      border-bottom: 1px solid rgba(255,255,255,0.1);
    }
    .navbar-brand {
      font-family: 'Noto Serif Devanagari', serif;
      font-size: 1.8rem;
      font-weight: bold;
      color: #ffffff !important;
      letter-spacing: 1px;
    }
    .nav-link {
      font-weight: 500;
      color: #e6e6e6 !important;
      margin: 0 0.5rem;
      transition: color 0.2s;
    }
    .nav-link:hover {
      color: #1D9BF0 !important;
    }

    /* Glass Card */
    .glass-card {
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.08);
      border-radius: 20px;
      padding: 2.5rem 2rem;
      max-width: 900px;
      margin: 12vh auto;
      text-align: center;
      box-shadow: 0 8px 32px rgba(0,0,0,0.4);
      animation: fadeIn 1.2s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .sanskrit-logo {
      font-family: 'Noto Serif Devanagari', serif;
      font-size: 2.2rem;
      color: #1D9BF0;
      margin-bottom: 1rem;
      text-shadow: 0 2px 8px rgba(29,155,240,0.4);
    }

    .about-title {
      font-size: 1.8rem;
      font-weight: 700;
      margin-bottom: 1rem;
    }

    .about-text {
      font-size: 1rem;
      color: #aaa;
      line-height: 1.6;
      margin-bottom: 1.5rem;
    }

    .profile-img {
      max-width: 150px;
      border-radius: 50%;
      border: 2px solid rgba(29,155,240,0.5);
      margin-bottom: 1rem;
      box-shadow: 0 4px 20px rgba(29,155,240,0.4);
    }

    .social-links a {
      color: #e6e6e6;
      margin: 0 0.8rem;
      font-size: 1.5rem;
      transition: color 0.3s;
    }
    .social-links a:hover {
      color: #1D9BF0;
    }

    /* Button */
    .btn-primary {
      background-color: #1D9BF0;
      border: none;
      border-radius: 12px;
      font-weight: 600;
      padding: 0.8rem 1.2rem;
      margin-top: 1.5rem;
      transition: all 0.3s ease;
    }
    .btn-primary:hover {
      background-color: #1a8cd8;
      transform: scale(1.05);
      box-shadow: 0 4px 20px rgba(29,155,240,0.35);
    }
  </style>
</head>
